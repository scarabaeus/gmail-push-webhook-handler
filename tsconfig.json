{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es2021", "ES2021.String"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
